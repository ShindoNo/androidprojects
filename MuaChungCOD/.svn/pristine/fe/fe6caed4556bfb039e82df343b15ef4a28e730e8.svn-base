<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup_out"
        android:orientation="vertical"
        android:padding="2dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Lọc đơn hàng"
            android:textColor="#DEDEDE"
            android:textSize="16dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_filter_ship_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone" >

            <RadioButton
                android:id="@+id/rb_filter_ship_all"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_btn_radio"
                android:text="Tất cả"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/rb_filter_ship_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_btn_radio"
                android:text="Chưa giao"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/rb_filter_ship_yes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_btn_radio"
                android:text="Đã giao"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/rb_filter_ship_reship"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_btn_radio"
                android:text="Giao lại"
                android:textColor="#FFF" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_filter_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <RadioButton
                android:id="@+id/rb_filter_type_all"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_btn_radio"
                android:text="Tất cả"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/rb_filter_ticket"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_btn_radio"
                android:text="Phiếu"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/rb_filter_goods"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_btn_radio"
                android:text="Hàng"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/rb_filter_solo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_btn_radio"
                android:text="Solo"
                android:textColor="#FFF" />
        </RadioGroup>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            >
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/street_container"
	            android:orientation="vertical"
	            >
	        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</ScrollView>