<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_deal_date_row"
    >

    <TextView
        android:id="@+id/tv_date"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#4C4C4C"
        android:text="18-9-2012 (38)"
        android:padding="10dp" 
        />
    
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_arrow_deal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        />
    
    <FrameLayout android:layout_width="fill_parent" android:background="#CDCDCD"  android:layout_height="1dp" android:layout_below="@+id/tv_date"/>
    

</RelativeLayout>