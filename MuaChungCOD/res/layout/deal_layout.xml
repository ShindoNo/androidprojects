<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_deal"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:id="@+id/layout_deal_1" 
        >

        <include layout="@layout/deal_layout_1" />

        <include layout="@layout/deal_layout_2" />

        <include layout="@layout/deal_layout_3" />

        <include layout="@layout/deal_layout_4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_deal_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <include layout="@layout/sort_layout" />
    </LinearLayout>

</RelativeLayout>