<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF" 
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#343232"
        android:paddingBottom="1dp"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Top Albums"
            android:layout_weight="1"
            android:gravity="center" 
            android:textColor="#FFF"
            android:textSize="16dp"
            android:id="@+id/tv_top_albums"
            android:background="@drawable/bg_menu_section_row"
            />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Albums"
            android:layout_weight="1"
            android:gravity="center" 
            android:textColor="#FFF"
            android:textSize="16dp"
            android:id="@+id/tv_new_albums"
            android:background="@drawable/bg_menu_section_row"
            />        
    </LinearLayout>
    
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:id="@+id/lv_top_albums"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:cacheColorHint="#0000"
        android:dividerHeight="1dp"
        android:divider="#efefef"
        android:visibility="visible"
        />
    
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:id="@+id/gv_new_albums"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:cacheColorHint="#0000"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:visibility="gone"
        />
    
</LinearLayout>