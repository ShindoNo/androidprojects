<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="320dp"
    android:orientation="vertical"
    android:background="#444444"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:padding="2dp"
        android:background="#666"
        >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_app"
            android:id="@+id/img_app"
            android:paddingLeft="10dp"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_app"
            android:text="Zii Nhạc Không Lời"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:textColor="#bebebe"
            />
    </RelativeLayout>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bebebe"
         />
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/exit"
        android:textColor="#FFF"
        android:gravity="center"
        android:id="@+id/tv_notify_content"
        android:textSize="18dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/exit_ok" 
            android:textColor="#FFF"
            android:background="#333"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_exit_ok"
            />
        
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/exit_cancel" 
            android:textColor="#FFF"
            android:background="#333"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"   
            android:layout_margin="5dp"     
            android:id="@+id/btn_exit_cancel"    
            />        
            
    </LinearLayout>

</LinearLayout>