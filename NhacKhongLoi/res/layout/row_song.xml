<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_song" 
    xmlns:app="http://schemas.android.com/apk/res/info.nkl.main">
    
    <info.nkl.customview.RobotoTextView
        android:id="@+id/tv_song_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1. Songs from the Secret Graden"
        android:lines="1"
        android:ellipsize="marquee"
        android:padding="10dp"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        />
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_to_playlist"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:id="@+id/img_add_to_playlist"
        android:visibility="gone"
        />

</RelativeLayout>