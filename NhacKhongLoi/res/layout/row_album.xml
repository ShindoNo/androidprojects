<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#9000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/layout_info_album"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#AA000000"
        android:gravity="center|left"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <info.nkl.customview.RobotoTextView
            android:id="@+id/tv_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:lines="1"
            android:text="Âm thanh của thời gian"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_intrument_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:lines="1"
            android:text="Guitar, Piano"
            android:textColor="#FFF"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_view"
            android:drawablePadding="5dp"
            android:orientation="horizontal"
            android:text="1789"
            android:id="@+id/tv_view_numb" 
            android:textColor="#FFF"
            android:textSize="12dp"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" >

        <TextView
            android:id="@+id/tv_auth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:gravity="right"
            android:lines="1"
            android:paddingRight="10dp"
            android:text="Vi Tường Văn"
            android:textColor="#7FFF"
            android:textSize="24dp" />
    </LinearLayout>

</RelativeLayout>