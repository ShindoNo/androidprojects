<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#0000"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/btn_01"
    android:padding="20dp"
    android:layout_gravity="center"
    >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_song_name_full"
        android:textColor="#FFF"
        android:text="Em Của Ngày Hôm Qua"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16dp" 
        android:padding="10dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:orientation="horizontal"
        >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip" 
            android:id="@+id/ic_bonus_skip"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/tv_bonus_skip"
            />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_open"
            android:layout_marginLeft="5dp" 
            android:id="@+id/ic_bonus_open"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/tv_bonus_open"
            />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_marginLeft="5dp" 
            android:id="@+id/ic_bonus_delete"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+1"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/tv_bonus_delete"
            />         
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#FFF"
        android:text="@string/next" 
        android:background="@drawable/bg_btn_green"
        android:layout_gravity="center"
        android:id="@+id/btn_next_song"
        android:layout_marginTop="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center"
        />
    

</LinearLayout>

</FrameLayout>
