<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f2f7"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_video_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_loading_video"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_more_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_more"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/view_more"
            android:textColor="#4a5865"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_color_topbar"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/news"
            android:textColor="#fff"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_news_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_loading_news"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:visibility="gone" 
            />

        <TextView
            android:id="@+id/tv_more_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_more"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/view_more"
            android:textColor="#4a5865"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>