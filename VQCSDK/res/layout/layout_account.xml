<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2" >

        <TextView
            android:id="@+id/tv_tab_account_info"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/tab_account"
            android:textColor="#d14129"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tab_addmoney_history"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_dashboard"
            android:gravity="center"
            android:text="@string/tab_addmoney_history"
            android:textColor="#000" />
    </LinearLayout>

    <!-- Start of tab account info -->

    <ScrollView
        android:id="@+id/ll_account_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content" 
               android:gravity="center_vertical"
               >
               
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Fpay: "
                    android:textColor="#d14129"
                    android:textStyle="bold"
                    android:id="@+id/tv_fpay_title"
                    />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_toRightOf="@+id/tv_fpay_title"
                    android:id="@+id/tv_fpay"
                    android:text="0.0"
                    />
                
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/tab_account_update"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_update_user_info" 
                android:textColor="#c8c8c8"
                android:enabled="false"
                android:textStyle="bold"
                />                
               
           </RelativeLayout>
           
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/tab_account_username"
                    android:textColor="#d14129"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:editable="false"
                    android:gravity="center_vertical"
                    android:hint="@string/tab_account_username"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:singleLine="true" 
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/tab_account_email"
                    android:textColor="#d14129"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:hint="@string/tab_account_email"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_editable"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/tab_account_fullname"
                    android:textColor="#d14129"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:hint="@string/tab_account_fullname"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_editable"                     
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/tab_account_birthday"
                    android:textColor="#d14129"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:hint="@string/tab_account_birthday"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_editable"                     
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/tab_account_address"
                    android:textColor="#d14129"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:hint="@string/tab_account_address"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_editable"                     
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/tab_account_cardno"
                    android:textColor="#d14129"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_cardno"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:hint="@string/tab_account_cardno"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:singleLine="true"
                    android:drawableRight="@drawable/ic_editable"
                    android:inputType="number"                     
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/tab_account_phonenumber"
                    android:textColor="#d14129"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:hint="@string/tab_account_phonenumber"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- End of tab account info -->


    <!-- Start of tab addmoney history -->

    <ScrollView
        android:id="@+id/ll_addmoney_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="4" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tab_addmoney_history_date"
                    android:textColor="#d14129" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tab_addmoney_history_game"
                    android:textColor="#d14129" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tab_addmoney_history_type"
                    android:textColor="#d14129" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/tab_addmoney_history_description"
                    android:textColor="#d14129" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <LinearLayout
                android:id="@+id/ll_addmoney_history_list_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- Start of tab addmoney history -->

</LinearLayout>